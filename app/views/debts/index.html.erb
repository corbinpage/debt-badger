<h1>Listing debts</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Debtor name</th>
      <th>Creditor name</th>
      <th>Debtor phone</th>
      <th>Creditor phone</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @debts.each do |debt| %>
      <tr>
        <td><%= debt.amount %></td>
        <td><%= debt.debtor_name %></td>
        <td><%= debt.creditor_name %></td>
        <td><%= debt.debtor_phone %></td>
        <td><%= debt.creditor_phone %></td>
        <td><%= debt.message %></td>
        <td><%= link_to 'Show', debt %></td>
        <td><%= link_to 'Edit', edit_debt_path(debt) %></td>
        <td><%= link_to 'Destroy', debt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

